<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_tree" model="ir.ui.view">
        <field name="name">easy.sales.sale.list</field>
        <field name="model">easy.sales.sale</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="size"/>
                <field name="quantity"/>
                <field name="total"/>
                <field name="type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_sale_form" model="ir.ui.view">
        <field name="name">easy.sales.sale.form</field>
        <field name="model">easy.sales.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_cash" string="Venta al Contado" type="object" class="btn-primary" invisible="state != 'draft'" style="font-size: 20px; padding: 10px;"/>
                    <button name="action_confirm_credit" string="Venta Fiada" type="object" class="btn-warning" invisible="state != 'draft'" style="font-size: 20px; padding: 10px;"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="customer_id"/>
                        <field name="product_id"/>
                        <field name="size"/>
                        <field name="quantity"/>
                        <field name="price" readonly="1"/>
                        <field name="total" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale" model="ir.actions.act_window">
        <field name="name">Ventas</field>
        <field name="res_model">easy.sales.sale</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_sale_tree"/>
    </record>
</odoo>