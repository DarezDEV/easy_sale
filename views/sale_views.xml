<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_tree" model="ir.ui.view">
        <field name="name">easy.sales.sale.list</field>
        <field name="model">easy.sales.sale</field>
        <field name="arch" type="xml">
            <list default_order="id desc" decoration-success="state == 'confirmed' and type == 'cash'" decoration-warning="state == 'confirmed' and type == 'credit'" decoration-muted="state == 'draft'">
                <field name="id" string="NÃºmero"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="size" widget="badge"/>
                <field name="quantity"/>
                <field name="total" sum="Total" widget="monetary"/>
                <field name="type" widget="badge" decoration-success="type == 'cash'" decoration-warning="type == 'credit'"/>
                <field name="state" widget="badge" decoration-success="state == 'confirmed'" decoration-muted="state == 'draft'"/>
                <field name="create_date" string="Fecha" widget="date"/>
            </list>
        </field>
    </record>

    <record id="view_sale_form" model="ir.ui.view">
        <field name="name">easy.sales.sale.form</field>
        <field name="model">easy.sales.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_cash" string="ðŸ’° Venta al Contado" type="object" 
                            class="btn-primary" invisible="state != 'draft'" 
                            style="font-size: 16px; padding: 8px 16px; margin-right: 10px;"/>
                    <button name="action_confirm_credit" string="ðŸ“‹ Venta Fiada" type="object" 
                            class="btn-warning" invisible="state != 'draft'" 
                            style="font-size: 16px; padding: 8px 16px;"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" invisible="1"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="id" readonly="1" string="Venta #"/>
                        </h1>
                    </div>
                    <group>
                        <group string="InformaciÃ³n del Cliente">
                            <field name="customer_id" options="{'no_create': False, 'no_create_edit': True}"/>
                        </group>
                        <group string="Detalles de la Venta">
                            <field name="product_id" options="{'no_create': False, 'no_create_edit': True}"/>
                            <field name="size" widget="radio" options="{'horizontal': true}"/>
                            <field name="quantity" widget="integer"/>
                        </group>
                    </group>
                    <group>
                        <group string="Precios">
                            <field name="price" readonly="1" widget="monetary"/>
                            <field name="total" readonly="1" widget="monetary" style="font-size: 18px; font-weight: bold;"/>
                        </group>
                        <group string="Estado de la Venta" invisible="state == 'draft'">
                            <field name="type" readonly="1" widget="badge"/>
                            <field name="create_date" readonly="1" string="Fecha de CreaciÃ³n"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_search" model="ir.ui.view">
        <field name="name">easy.sales.sale.search</field>
        <field name="model">easy.sales.sale</field>
        <field name="arch" type="xml">
            <search string="Buscar Ventas">
                <field name="customer_id" string="Cliente"/>
                <field name="product_id" string="Producto"/>
                <separator/>
                <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmadas" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <separator/>
                <filter string="Al Contado" name="cash" domain="[('type', '=', 'cash')]"/>
                <filter string="Fiadas" name="credit" domain="[('type', '=', 'credit')]"/>
                <separator/>
                <filter string="Hoy" name="today" domain="[('create_date', '&gt;=', context_today())]"/>
                <filter string="Ãšltimos 7 dÃ­as" name="last_week" domain="[('create_date', '&gt;=', (context_today() - relativedelta(days=7)))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Cliente" name="group_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Producto" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Tipo" name="group_type" context="{'group_by': 'type'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_sale" model="ir.actions.act_window">
        <field name="name">Ventas</field>
        <field name="res_model">easy.sales.sale</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_sale_tree"/>
        <field name="search_view_id" ref="view_sale_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Â¡Crea tu primera venta!
            </p>
            <p>
                Registra las ventas de tus productos y gestiona el inventario automÃ¡ticamente.
            </p>
        </field>
    </record>
</odoo>