<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_debt_tree" model="ir.ui.view">
        <field name="name">easy.sales.debt.list</field>
        <field name="model">easy.sales.debt</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_id"/>
                <field name="amount" sum="Total Pendiente"/>
            </list>
        </field>
    </record>

    <record id="view_debt_form" model="ir.ui.view">
        <field name="name">easy.sales.debt.form</field>
        <field name="model">easy.sales.debt</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_register_payment" string="Registrar Pago" type="object" class="btn-success" style="font-size: 20px; padding: 10px;"/>
                </header>
                <sheet>
                    <group>
                        <field name="customer_id" readonly="1"/>
                        <field name="sale_id" readonly="1"/>
                        <field name="amount"/>
                    </group>
                    <notebook>
                        <page string="Pagos">
                            <field name="payment_ids">
                                <list editable="top">
                                    <field name="amount"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_debt" model="ir.actions.act_window">
        <field name="name">Deudas</field>
        <field name="res_model">easy.sales.debt</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_debt_tree"/>
    </record>

    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">easy.sales.payment.form</field>
        <field name="model">easy.sales.payment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="amount"/>
                    <field name="date"/>
                </group>
            </form>
        </field>
    </record>
</odoo>