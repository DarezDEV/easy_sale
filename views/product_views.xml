<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_tree" model="ir.ui.view">
        <field name="name">easy.sales.product.list</field>
        <field name="model">easy.sales.product</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name"/>
                <field name="price"/>
                <field name="category_id"/>
                <field name="total_stock"/>
            </list>
        </field>
    </record>

    <record id="view_product_form" model="ir.ui.view">
        <field name="name">easy.sales.product.form</field>
        <field name="model">easy.sales.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="category_id"/>
                    </group>
                    <notebook>
                        <page string="Tallas y Stock">
                            <field name="size_lines">
                                <list editable="top">
                                    <field name="size"/>
                                    <field name="stock"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">easy.sales.product</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_product_tree"/>
    </record>

    <record id="view_category_tree" model="ir.ui.view">
        <field name="name">easy.sales.category.list</field>
        <field name="model">easy.sales.category</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_category_form" model="ir.ui.view">
        <field name="name">easy.sales.category.form</field>
        <field name="model">easy.sales.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_category" model="ir.actions.act_window">
        <field name="name">Categor√≠as</field>
        <field name="res_model">easy.sales.category</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_category_tree"/>
    </record>
</odoo>